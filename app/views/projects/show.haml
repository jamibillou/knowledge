.right-button
	%a.btn.btn-primary{ href: edit_project_path }
		%i.icon-pencil.icon-white
		Edit project
.row
	.span11{ :style => 'margin-left:40px'}
		%h1=@project.name
	%br/
	.span11.offset1{ :style => 'margin-top:20px;' }
		.well
			%h6 GENERAL INFO
			- unless @project.description.blank?
				%p=simple_format(@project.description)
			- unless @project.constructs.empty?
				%h6 CONSTRUCT
				.lead 
					= "Protein: #{construct.name} (#{construct.protein_family} family)"
					%br/
					Organism:
					= construct.organism
				- unless construct.size.blank?
					%span.title Size:
					= "#{construct.size} Da"
				- unless construct.pi.blank?
					%br/
					%span.title PI:
					= construct.pi
				- unless construct.nb_cystein.blank?
					%br/
					%span.title Number of cysteins:
					= construct.nb_cystein
				%br/
				%br/
				- unless construct.sequence.blank?
					.lead Sequence:
					%pre= construct.sequence	

	- unless project_managers.blank? && involved_people.blank?
		.span5.offset1
			.well
				%h6 PX
				- unless project_managers.blank?
					%span.title	Project manager(s):
					= project_managers
					%br/
				- unless involved_people.blank?
					%span.title	Involved people:
					= involved_people
	.span5.offset1
		.well
			%h6 CUSTOMER
			%span.title	Company:
			= @project.company
			%br/
			- unless @project.contact.blank?
				%span.title	Contact(s):
				=@project.contact
				%br/
			- unless @project.contact_info.blank?	
				%i.icon-briefcase 
				%span.title Contact info:
				=@project.contact_info
	- unless @project.lab_books.blank? 				
		.span5.offset1
			.well
				%h6 LAB BOOKS
				=@project.lab_books
	- unless @project.expressions.empty?
		.span11.offset1
			.well
				%H6 EXPRESSION
				- unless selected_expression.system.blank?
					%span.title System:
					= selected_expression.system
				- unless selected_expression.vector_backbone.blank?
					%br/
					%span.title Vector backbone:
					= selected_expression.vector_backbone
				- unless selected_expression.gene.blank?
					%br/
					%span.title Gene:
					= selected_expression.gene
				- unless selected_expression.tag.blank?
					%br/
					%span.title Tag:
					= selected_expression.tag
				- unless selected_expression.cleavage_site.blank?
					%br/
					%span.title Cleavage site:
					= selected_expression.cleavage_site
				- unless selected_expression.compartment.blank?
					%br/
					%span.title Compartment:
					= selected_expression.compartment
				- unless selected_expression.solubility.blank?
					%br/
					%span.title Solubility:
					= selected_expression.solubility
				- unless no_expression_conditions?
					%h3 Expression conditions
					- unless selected_expression.strain.blank?
						%br/
						%span.title Strain:
						= selected_expression.strain
					- unless selected_expression.method.blank?
						%br/
						%span.title Method:
						= selected_expression.method
					- unless selected_expression.medium.blank?
						%br/
						%span.title Medium:
						= selected_expression.medium
					- unless selected_expression.temperature.blank?
						%br/
						%span.title Temperature:
						= "#{selected_expression.temperature} Â°C"