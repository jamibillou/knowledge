.right-button
	%a.btn.btn-primary{ href: edit_project_path }
		%i.icon-pencil.icon-white
		Edit project
.row
	.span11{ :style => 'margin-left:40px'}
		%h1=@project.name
	%br/
	.span11.offset1{ :style => 'margin-top:20px;' }
		.well
			%h6 GENERAL INFO
			- unless @project.description.blank?
				%p=simple_format(@project.description)
	- unless project_managers.blank? && involved_people.blank?
		.span5.offset1
			.well
				%h6 PX
				- unless project_managers.blank?
					%strong	Project manager(s):
					= project_managers
					%br/
				- unless involved_people.blank?
					%strong	Involved people:
					= involved_people
	.span5.offset1
		.well
			%h6 CUSTOMER
			%strong	Company:
			=@project.company
			%br/
			- unless @project.contact.blank?
				%strong	Contact(s):
				=@project.contact
				%br/
			- unless @project.contact_info.blank?	
				%i.icon-briefcase 
				%strong Contact info:
				=@project.contact_info
	- unless @project.lab_books.blank? 				
		.span5.offset1
			.well
				%h6 LAB BOOKS
				=@project.lab_books